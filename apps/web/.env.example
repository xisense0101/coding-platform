# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database
DATABASE_URL=your_database_url

# Authentication
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# File Storage
NEXT_PUBLIC_STORAGE_BUCKET=edu-platform-files

# External Services
SENTRY_DSN=your_sentry_dsn
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Email Service (for notifications)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@yourplatform.com

# Mailjet Email Service (for bulk user creation emails)
# Get your credentials from https://app.mailjet.com/account/apikeys
MAILJET_API_KEY=your_mailjet_api_key
MAILJET_API_SECRET=your_mailjet_api_secret
FROM_NAME=Coding Platform

# Redis (for caching) - Using Upstash Redis
# Get these from https://console.upstash.com/
UPSTASH_REDIS_REST_URL=https://your-redis-endpoint.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_rest_token

# Legacy Redis URL (optional, for other Redis providers)
REDIS_URL=your_redis_url

# Judge0 API (for code execution)
JUDGE0_API_URL=https://judge0-ce.p.rapidapi.com
JUDGE0_API_KEY=your_judge0_api_key

# Analytics
ANALYTICS_API_KEY=your_analytics_key

# Feature Flags
ENABLE_PROCTORING=true
ENABLE_AI_FEATURES=false
ENABLE_ANALYTICS=true

# Security
ENCRYPTION_KEY=your_encryption_key_32_chars_long
JWT_SECRET=your_jwt_secret


# Monitoring
NEW_RELIC_LICENSE_KEY=your_new_relic_key
DATADOG_API_KEY=your_datadog_key

# Development
NODE_ENV=development

# Website Domain/URL Configuration
# IMPORTANT: This URL is used in:
# - Email templates (login button redirects)
# - Password reset links
# - API redirects
# For development: http://localhost:3000
# For production: https://yourdomain.com (replace with your actual deployed domain)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Multi-Tenant Subdomain Configuration
# Base domain for organization subdomains (e.g., chitkara.blockscode.me)
# For production: blockscode.me (your actual domain)
# For development: localhost (subdomains won't work locally, use ?org=subdomain query param)
NEXT_PUBLIC_BASE_DOMAIN=blockscode.me

# Main domain (without subdomain)
# Used to distinguish main site from organization subdomains
NEXT_PUBLIC_MAIN_DOMAIN=blockscode.me

# Protocol (http for local, https for production)
NEXT_PUBLIC_APP_PROTOCOL=https

# Supabase Storage Bucket for Organization Logos
# Create this bucket in Supabase Dashboard â†’ Storage
# Make it PUBLIC to allow logo access
NEXT_PUBLIC_STORAGE_BUCKET=organization-logos

